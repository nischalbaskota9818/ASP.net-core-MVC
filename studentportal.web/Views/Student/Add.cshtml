@model studentportal.web.Models.AddStudentViewModel

<h1>Add student</h1>

@*<form method="post">*@
         @*we will use bootstrap to create different form inputs  *@
<form asp-action="Add" method="post">
<div class="mt-3">
    <label class="form-label">Name</label>
    <input type="text" class="form-control" asp-for="Name"/>
</div>

<div class="mt-3">
    <label class="form-label">Email</label>
    <input type="email" class="form-control" asp-for="Email"/>
</div>

<div class="mt-3">
<label class="form-label">Phone</label>
<input type="text" class="form-control" asp-for="Phone"/>
</div>

@*for subscribed we use checkbox which we can see from bootstrap pages *@

<div class="mt-3">
   <input type="checkbox" class="form-check-input" id="Subscribed" asp-for="Subscribed"/>
    <label class="form-check-label" for="">Subscribed</label>
</div>


<div class="mt-3">
    <button type="submit" class="btn btn-primary">Save</button>
</div>

</form>