@{
}
@model studentportal.web.Models.AddStudentViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Student Added</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
</head>
<body>
    <div class="container">
        <h1>Student Added Successfully</h1>
        <p>Name: @Model.Name</p>
        <p>Email: @Model.Email</p>
        <p>Phone: @Model.Phone</p>
        <p>Subscribed: @(Model.Subscribed ? "Yes" : "No")</p>
        <a href="/Student/Add" class="btn btn-primary">Add Another Student</a>
    </div>
</body>
</html>
